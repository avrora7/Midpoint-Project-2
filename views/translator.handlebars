{{> logout}}
<h1 class="text-center">View and Apply for a Job</h1>


<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Date Posted</th>
    <th>Source language</th>
    <th>Target language</th>
    <th>Title</th>
    <th>Status</th>
    <th>Contact</th>
    <th>Action</th>
  </tr>
  {{#each jobs}}
  <tr>
    <td>{{id}}</td>
    <td>{{createdAt}}</td>
    <td>{{LanguageFrom.name}}</td>
    <td>{{LanguageTo.name}}</td>
    <td>{{title}}</td>
    <td>{{status}}</td>
    <td><a href="mailto:{{Vendor.email}}" target="_top">
        {{Vendor.fullName}}</a></td>
    <td>
      {{#ifEquals status "open"}}
      <button data-id="{{id}}" class="btn btn-primary text-uppercase applyBtn">Apply</button>
      {{/ifEquals }}
      {{#ifEquals status "assigned"}}
      <button data-id="{{id}}" class="btn btn-primary text-uppercase closeBtn">Close</button>
      {{/ifEquals }}
    </td>
  </tr>
  {{/each}}
</table>

<script src="/js/user.js"></script>