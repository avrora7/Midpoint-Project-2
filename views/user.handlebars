<h1>View and Apply for a Job</h1>
<script src="/js/user.js"></script>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Date Posted</th>
    <th>Source language</th>
    <th>Target language</th>
    <th>Title</th>
    <th>Status</th>
    <th>Contact</th>
    <th>Action</th>
  </tr>
  {{#each jobs}}
  <tr>
    <td>{{id}}</td>
    <td>{{createdAt}}</td>
    <td>{{LanguageFrom.name}}</td>
    <td>{{LanguageTo.name}}</td>
    <td>{{title}}</td>
    <td>{{status}}</td>
    <td>{{Vendor.fullName}}</td>
    <td> 
      {{#ifEquals  status "open"}}
      <button id="" class="btn btn-primary text-uppercase">Apply</button>
      {{/ifEquals }}
      {{#ifEquals  status "assigned"}}
      <button id="" class="btn btn-primary text-uppercase">Close</button>
      {{/ifEquals }}
      </td>
  </tr>
  {{/each}}
</table>